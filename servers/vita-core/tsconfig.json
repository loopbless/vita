{
  "compilerOptions": {
    "module": "NodeNext", // 模块
    "target": "ES2015",
    "removeComments": true,
    "moduleResolution": "NodeNext", // 模块解析
    "esModuleInterop": true, // 是否支持esm
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/*.ts", "src/trpc.ts"],
  "exclude": ["node_modules"]
}
